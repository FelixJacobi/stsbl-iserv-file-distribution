{# src/Stsbl/FileDistributionBundle/Resources/views/List/field_internet.html.twig #}
{% extends admin.getTemplate('list_field_base') %}

{% block field %}
    {% set state = admin.getInternetStateByName(value) %}
    {% set explaination = admin.getInternetExplainationByName(value) %}
    {% if state == 'forbidden' %}
        <span title="{{ __('Until: %s', explaination.until|ltime) ~ ', ' ~ __('By: %s', explaination.user) }}" class="fd-internet-forbidden">{{ _('Forbidden') }}</span>
    {% elseif state == 'granted' %}
        <span title="{{ __('Until: %s', explaination.until|ltime) ~ ', ' ~ __('By: %s', explaination.user) }}" class="fd-internet-granted">{{ _('Granted') }}</span>
    {% elseif state == 'yes' %}
        {{ _('Yes') }}
    {% elseif state == 'no' %}
        {{ _('No') }}
    {% elseif state == 'exam' %}
        <span title="{{ __('Title: %s', explaination.title) ~ ', ' ~ __('By: %s', explaination.user) }}" class="fd-internet-exam-mode">{{ _('Exam Mode') }}</span>
    {% endif %}
{% endblock %}